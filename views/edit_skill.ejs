<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Skill</title>
    <link rel="stylesheet" href="/css/skills.css">
    <script type="module" src="/scripts/edit_skills.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.4.0/dist/confetti.browser.min.js"></script>
</head>
<body>
<div class="wrapper">
    <div id="confirmation-modal" class="modal hidden">
        <div class="modal-content">
            <p>Are you sure you want to delete this skill?</p>
            <button id="confirm-delete" class="btn confirm">Yes, Delete</button>
            <button id="cancel-delete" class="btn cancel">Cancel</button>
        </div>
    </div>

    <form action="/skills/<%= skillTree %>/edit/<%= skill.id %>" method="POST" enctype="multipart/form-data">
        <section id="skill-header">
            <article class="skill-title">
                <label for="skill-name">Skill Name:</label>
                <textarea id="skill-name" name="text" spellcheck="false" required><%= skill.text %></textarea>
            </article>
            <article class="skill-score">
                <label for="skill-score">Skill Score:</label>
                <input type="number" min="1" id="skill-score" name="points" value="<%= skill.score %>" required>
            </article>
        </section>

        <!-- Visualization Section -->
        <section id="skill-visualization">
            <div class="details-svg" svgId=<%= skill.id %>></div>
        </section>

        <!-- Description Section -->
        <section id="skill-description">
            <h2>Description</h2>
            <label for="edit-skill-description"></label>
            <textarea id="edit-skill-description" name="description" spellcheck="false" required><%= skill.description %></textarea>
        </section>

        <!-- Tasks Section -->
        <section id="tasks-to-complete">
            <h2>Tasks to Complete</h2>
            <label for="task-list"></label>
            <textarea id="task-list" name="tasks" spellcheck="false" required>
                <%= skill.tasks.join('\n') %>
            </textarea>
        </section>

        <!-- Resources Section -->
        <section id="resources">
            <h2>Resources</h2>
            <label for="resource-list"></label>
            <textarea id="resource-list" name="resources" spellcheck="false" required>
                <%= skill.resources.join('\n') %>
            </textarea>
        </section>

        <section id="upload">
            <h2>Upload Icon (30x30 png):</h2>
            <label for="icon-upload">Choose a File</label>
            <input type="file" name="icon" id="icon-upload" accept="image/png">
            <p class="file-name" id="file-name">No file selected</p>
            <img id="icon-preview" src="#" alt="Icon Preview" style="display: none">
        </section>

        <button id="save" type="submit" name="action" value="save">Save</button>
        <button id="cancel" type="submit" name="action" value="cancel">Cancel</button>
        <button id="delete" type="button" class="btn delete" name="action" value="delete">Delete Skill</button>

    </form>

    <div id="success-modal" class="modal hidden">
        <div class="modal-content">
            <p>Skill editted successfully!</p>
            <button id="close-modal" class="btn confirm">Close</button>
        </div>
    </div>
</div>
</body>
</html>