<% if (typeof success_msg !== 'undefined' && success_msg) { %>
    <div class="alert success-message">
        <%= success_msg %>
    </div>
<% } %>

<% if (typeof error_msg !== 'undefined' && error_msg) { %>
    <div class="alert error-message">
        <%= error_msg %>
    </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
    <div class="alert error-message">
        <%= error %>
    </div>
<% } %>